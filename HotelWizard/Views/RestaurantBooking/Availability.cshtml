@model HotelWizard.Models.RestaurantBooking

@{
    ViewBag.Title = "Availability";
}

<h2>Available Rooms</h2>

@if (ViewBag.errorMsg != null)
{
    <h2 style="color:red;">ViewBag.errorMsg</h2>
}
else
{
    <p>
        There are tables available
    </p>

    using (Html.BeginForm("CreateNew", "RestaurantCustomer"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Select Room</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <input type="datetime" id="BookingDate" name="BookingDate" value=@ViewBag.BookingDate readonly="readonly">
                @Html.Label("Select Table Number")
                @Html.DropDownList("TableNum", String.Empty)
            </div>
            <div class="form-group">
                <input type="submit" value="Continue With Booking" class="btn btn-default" />
                <input type="button" value="Start Again" class="btn btn-default" onclick="goBack()" />
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function goBack() {
        window.history.back()
    }
</script>




@model HotelWizard.Models.RoomBooking

@{
    ViewBag.Title = "Add Another Reservation";
    int customerID = ViewBag.customerID;
}

<h2>Please Check Availability</h2>

<h3 style="color:red">@ViewBag.errorMsg</h3>
@using (Html.BeginForm("AvailabilityExtraRoom", "RoomBookings", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.Hidden("customerID", customerID)
 
        <div class="form-group">
            @Html.Label("Check In Date:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.checkin)
                @Html.ValidationMessageFor(model => model.checkin)
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Check Out Date:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.checkout)
                @Html.ValidationMessageFor(model => model.checkout)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Check Availability" class="btn btn-default" />
                @Html.ActionLink("Cancel", "Details", "ReservationCustomers", new { id = customerID }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }




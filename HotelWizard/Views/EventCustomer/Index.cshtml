
@model HotelWizard.Models.EventBooking

@{
    ViewBag.Title = "Event Room Home";
}

<h3>Welcome to the Event Room Booking Section</h3>
<hr />
<h3>Search By Customer Name</h3>
<h3 style="color:red">@ViewBag.errorNoName</h3>
<form name="input" action="/EventCustomer/ResultsByName" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Customer Surname:</label>
            <div class="col-md-10">
                <input class="text-box single-line" id="name" name="name" type="text" value="">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default">
            </div>
        </div>
    </div>
</form>

<h3>Search Existing Bookings By Booking Date</h3>
<h3 style="color:red">@ViewBag.errorNoDate</h3>
@using (Html.BeginForm("ResultsByDate", "eventCustomer", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Date:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookingDate)
                @Html.ValidationMessageFor(model => model.BookingDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<hr id="thick" />
<h3>Check Availability and Create New Reservation</h3>
<h3 style="color:red">@ViewBag.errorMsg</h3>
@using (Html.BeginForm("Availability", "EventBooking", FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Date:", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BookingDate)
                @Html.ValidationMessageFor(model => model.BookingDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Check Availability" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



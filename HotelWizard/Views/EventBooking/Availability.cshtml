@model HotelWizard.Models.EventBooking

@{
    ViewBag.Title = "Availability";
}

<h2>Availablity for the Event Room</h2>

@if (ViewBag.errorMsg != null)
{
    <h2 style="color:red;">ViewBag.errorMsg</h2>
}
else
{
    <p>
        The Event Room is available for this date.
    </p>

    using (Html.BeginForm("CreateNew", "EventCustomer"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Continue with this booking?</h4>
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                <input type="datetime" id="BookingDate" name="BookingDate" value=@ViewBag.BookingDate readonly="readonly">
            </div>
            <div class="form-group">
                <input type="submit" value="Continue With Booking" class="btn btn-default" />
                <input type="button" value="Start Again" class="btn btn-default" onclick="goBack()" />
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function goBack() {
        window.history.back()
    }
</script>

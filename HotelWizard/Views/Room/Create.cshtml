@model HotelWizard.Models.Room

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create Rooms</h4>
        <h3>Max number of rooms to be created is @ViewBag.numRooms</h3>
        <h4 style="color:red;">@ViewBag.errormsg</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.roomNum, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.roomNum)
                @Html.ValidationMessageFor(model => model.roomNum)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.roomRate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.roomRate)
                @Html.ValidationMessageFor(model => model.roomRate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.roomType, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.roomType)
                @Html.ValidationMessageFor(model => model.roomType)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
